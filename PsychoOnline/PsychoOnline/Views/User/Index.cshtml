@model IEnumerable<PsychoOnline.Context.Record>
@{
    ViewBag.Title = "Order history";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link rel="stylesheet" href="~/css/cart.css"/>
<link rel="stylesheet" href="~/css/footer.css"/>

<table class="table table-hover" style="margin-top: 4%;">
    <tr>
        <th>Number of record</th>
        <th>Date of record</th>
        <th>Psychologist</th>
        <th>Assigned date</th>
        <th>Time</th>
        <th></th>
    </tr>
    @foreach (var record in Model)
    {
    <tr>
        <td>@record.Id</td>
        <td>@record.InitialDate</td>
        <td>@record.Psychologist.Surname</td>
        <td>@record.AssignedDate</td>
        <td>@record.ATime</td>
        <td>
            <form asp-controller="User" asp-action="DeleteOrder" asp-route-id="@record.Id">
                <input value="Delete" class="btn btn-danger" type="submit" />
            </form>
        </td>
    </tr>
    }
</table>
<div class="text-center">
    <div class="btn_create ">
        Create new ?
        <b><a asp-action="Create">Create new</a></b>
    </div>
</div>
