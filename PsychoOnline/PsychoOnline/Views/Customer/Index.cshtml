@model IEnumerable<PsychoWeb.Context.Customer>
@{
    ViewBag.Title = "Customers list";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<link rel="stylesheet" href="~/css/site.css" />
<a class="btn btn-sm btn-primary" style="margin: 2% 0%;" asp-action="Create">Add new customer</a>

<table class="table table-hover">
    @if (Model.Count() != 0)
    {
        <tr>
            <th>First Name</th>
            <th>Second Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Orders</th>
            <th></th>
        </tr>

        foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.Surname</td>
                <td>@customer.PhoneNumber</td>
                <td>@customer.Email</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@customer.CustomerId" method="post">
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@customer.CustomerId">Edit</a>
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    }
    else
    {
        <div class="center-text">
            <h4>List of users is empty !</h4>
        </div>
    }
</table>

